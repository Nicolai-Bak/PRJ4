{
	"source": {
		"include": ["./src"],
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},

	"tags": {
		"allowUnknownTags": ["component", "category", "subcategory"]
	},

	"opts": {
		"template": "node_modules/better-docs",
		"destination": "docs/",
		"recurse": true,
		"readme": "README.md"
	},

	"plugins": [
		"node_modules/better-docs/category",
		"node_modules/better-docs/component"
	]
}
